<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hw.moviedbapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/mainActivityLabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMovieActivity"
            android:label="@string/addMovieActivityLabel" />
        <activity
            android:name=".EditMovieActivity"
            android:label="@string/editMovieActivityLabel" />
        <activity
            android:name=".MovieListYearActivity"
            android:label="@string/movieListYearActivityLabel">
            <intent-filter>
                <action android:name="com.hw.moviedbapp.intent.action.MOVIELISTYEAR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MovieListRatingActivity"
            android:label="@string/movieListRatingActivityLabel">
            <intent-filter>
                <action android:name="com.hw.moviedbapp.intent.action.MOVIELISTRATING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    </application>

</manifest>